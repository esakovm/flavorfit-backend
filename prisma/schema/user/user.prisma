model User {
  id String @id @default(cuid())

  email    String @unique
  password String
  role     Role   @default(USER)

  profile      Profile?
  measurements BodyMeasurements?

  recipes  Recipe[]
  likes    Like[]
  comments Comment[]
  orders   Order[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

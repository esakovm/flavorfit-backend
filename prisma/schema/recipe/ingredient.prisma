model Ingredient {
  id String @id @default(cuid())

  name    String
  iconUrl String? @map("icon_url")
  content String?

  price Decimal

  orderItems       OrderItem[]
  recipeIngredient RecipeIngredient[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("ingredients")
}
